@page
@model My_Scripture_Journal.Pages.JournalEntries.CreateModel

@{
    ViewData["Title"] = "New Entry";
}

<h1>New</h1>

<h4>JournalEntry</h4>
<hr />
<div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-4">
                <div class="row">
                    <div class="form-group">
                        <label asp-for="JournalEntry.EntryDate" class="control-label"></label>
                        <input asp-for="JournalEntry.EntryDate" class="form-control" />
                        <span asp-validation-for="JournalEntry.EntryDate" class="text-danger"></span>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group">
                        <label asp-for="JournalEntry.Book" class="control-label"></label>
                        <input asp-for="JournalEntry.Book" class="form-control" />
                        <span asp-validation-for="JournalEntry.Book" class="text-danger"></span>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group">
                        <label asp-for="JournalEntry.Chapter" class="control-label"></label>
                        <input asp-for="JournalEntry.Chapter" class="form-control" />
                        <span asp-validation-for="JournalEntry.Chapter" class="text-danger"></span>
                    </div>  
                </div>
                <div class="row">
                    <div class="form-group">
                        <label asp-for="JournalEntry.Verse" class="control-label"></label>
                        <input asp-for="JournalEntry.Verse" class="form-control" />
                        <span asp-validation-for="JournalEntry.Verse" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <br /><br />
                    <div class="form-group">
                        <br /><br />
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div><label asp-for="JournalEntry.Notes" class="control-label"></label>
                </div>
                    <textarea class="newNotes" asp-for="JournalEntry.Notes" class="form-control"></textarea>
                    <span asp-validation-for="JournalEntry.Notes" class="text-danger"></span>
                </div>
            </div>
        </div>

    </form>
</div>
<div><br /><br /><br /><br />
